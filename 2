def rotate_array(nums, k):
    # Проверяем, что массив не пустой и k неотрицательное
    if not nums or k < 0:
        return nums
        
    # Вычисляем действительное количество шагов поворота
    k = k % len(nums)
    
    # Переворачиваем весь массив
    nums.reverse()
    
    # Переворачиваем первую часть массива до k
    nums[:k] = reversed(nums[:k])
    
    # Переворачиваем вторую часть массива после k
    nums[k:] = reversed(nums[k:])
    
    return nums

nums = [1, 2, 3, 4, 5, 6, 7]
k = 3
result = rotate_array(nums, k)
print(result)