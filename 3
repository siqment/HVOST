def duplicate_zeros(arr):
    length = len(arr)
    i = 0
    while i < length:
        if arr[i] == 0:
            arr.insert(i+1, 0)  # Вставляем 0 после текущего 0
            arr.pop()  # Удаляем последний элемент списка, чтобы не превышать длину
            i += 2  # Переходим к следующей паре элементов
        else:
            i += 1  # Переходим к следующему элементу
arr = [1,0,2,3,0,4,5,0]
duplicate_zeros(arr)
print(arr)  # [1,0,0,2,3,0,0,4]